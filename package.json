{
  "name": "@kl-engineering/kidsloop-media-hooks",
  "version": "0.2.4",
  "repository": "git://github.com/kl-engineering/kidsloop-media-hooks.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "release": "standard-version",
    "prepare": "husky install",
    "format:check": "prettier --check \"{src,tests}/**/*.{ts,tsx}\" \"*.json\"",
    "format": "prettier --write \"{src,tests}/**/*.{ts,tsx}\" \"*.json\"",
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "graphql": "^15.5.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/cz-commitlint": "^13.2.1",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/react": "^17.0.16",
    "commitizen": "^4.2.4",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.3.2",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@apollo/client": "3 - 4",
    "react": "16 - 18"
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "{src,tests}/**/*.{ts,tsx}": "prettier --write"
  }
}
